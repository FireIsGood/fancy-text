---
import "@/styles/global.css";
import Head from "@/components/Head.astro";
interface Props {
    title: string;
    description: string;
    viewTransition?: boolean;
}

const { title, description, viewTransition = true } = Astro.props;
---

<html lang="en">
    <Head {title} {description} {viewTransition} />
    <body>
        <slot />
    </body>
</html>
